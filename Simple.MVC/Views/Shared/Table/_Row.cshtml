@model Simple.ViewModel.ViewModelNonGenericBase
<tr>
	@foreach (var c in Model.Columns)
	{
		<td class="click-cell" data-bind="visible: @Html.Raw((!c.IsHidden).ToString().ToLower())">
			<a href="#/view/2" data-bind="href: '#/view/' + Id">
				<span data-bind="text: @Html.Raw(c.ColumnName)"></span>
			</a>
		</td>
	}
	<td class="table-filter-col4 action-cell" style="text-align: right; vertical-align: middle;">
		<div class="dropdown">
			<button class="btn btn-link btn-xs" type="button" data-toggle="dropdown" aria-expanded="true"><i class="fa fa-chevron-down"></i></button>
			<ul class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="dropdownMenu1">
				<li><a data-bind="href: '#/view/' + Id" href="#">Edit</a></li>
				@*<li><a href="#">Delete</a></li>*@
			</ul>
		</div>
	</td>
</tr>